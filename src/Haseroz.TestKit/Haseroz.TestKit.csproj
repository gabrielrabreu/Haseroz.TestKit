<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <SonarQubeTestProject>false</SonarQubeTestProject>
  </PropertyGroup>

  <PropertyGroup Label="Package info">
    <Authors>Gabriel Abreu (@gabrielrabreu)</Authors>
    <PackageDescription>Versatile .NET library providing comprehensive testing utilities for streamlined unit and integration testing workflows in .NET applications.</PackageDescription>
    <PackageProjectUrl>https://github.com/gabrielrabreu/Haseroz.TestKit</PackageProjectUrl>
    <RepositoryUrl>https://github.com/gabrielrabreu/Haseroz.TestKit</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageIcon>HaserozTestKit.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <Version>$(Version)</Version>
  </PropertyGroup>

  <ItemGroup Label="Package files">
    <None Include="..\..\docs\assets\HaserozTestKit.png" Visible="false" Pack="true" PackagePath="/" />
    <None Include="..\..\README.md" Visible="false" Pack="true" PackagePath="/" />
    <None Include="..\..\LICENSE" Visible="false" Pack="true" PackagePath="/" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="FluentAssertions" Version="6.12.0" />
  </ItemGroup>

</Project>
 
